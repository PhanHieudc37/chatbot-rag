# Environment Configuration
# Copy this to .env and adjust values

# Database
DATABASE_PATH=products.db

# FAISS Index
FAISS_INDEX_PATH=faiss_index/index.faiss
FAISS_METADATA_PATH=faiss_index/metadata.db

# LM Studio
LM_STUDIO_URL=http://localhost:1234/v1/chat/completions
LM_STUDIO_MODEL=Vistral-7b-Chat-GGUF

# Embedding Model
EMBEDDING_MODEL=keepitreal/vietnamese-sbert
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3737
SERVER_DEBUG=True

# RAG Parameters
RAG_TOP_K=5
RAG_MAX_TOKENS=2000
RAG_TEMPERATURE=0.0

# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=200
